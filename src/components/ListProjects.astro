---
interface Project {
  text: string
  description?: string
  icon?: string
  href: string
}

interface Props {
  list: Project[]
}

const { list = [] } = Astro.props
---

<ul class="grid grid-cols-1 sm:grid-cols-2 gap-4">
  {
    !list || list.length === 0 ? (
      <div class="py-10 opacity-50 text-lg">nothing here yet.</div>
    ) : (
      list.map((project) => (
        <li class="container-link w-full flex items-center rd-2">
          <a class="flex items-center" target="_blank" href={project.href} aria-label={project.text}>
            <div class="ml-2 mr-4 pt-2">
              <i class:list={['text-4xl inline-block', project.icon || 'i-carbon-unknown']} />
            </div>
            <div class="font-normal lh-tight">
              <div class="text-lg hover:text-main">{project.text}</div>
              <div class="opacity-50 text-sm">{project.description}</div>
            </div>
          </a>
        </li>
      ))
    )
  }
</ul>
