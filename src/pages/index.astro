---
import { Image } from 'astro:assets'
import BaseLayout from '@/layouts/BaseLayout.astro'
import siteConfig from '@/site-config'
import icedteaIcon from '@/assets/CTF/ICEDTEA.jpg'
import tryhackmeIcon from '@/assets/tryhackme.svg'

const ogImage = { src: '/og/index.png', alt: 'UmmIt Kin Personal Website' }
---

<BaseLayout description={siteConfig.description} image={ogImage}>
  <article class="prose">
    <h1 class="text-title">Hi, I'm Kin :)</h1>
    <p>
      HKer, InfoSec enthusiast, passionate about GNU/Linux, Web security, and open source. <br /><br />
      Find me if you want someone to pentest your web applications, or just want to chat about tech!
    </p>

    <p>
      CTF Team
      <a href="https://ic3dt3a.org/" target="_blank" rel="noopener" class="magic-link">
        <span class="magic-link-icon"><Image src={icedteaIcon} alt="" width={500} height={500} /></span>ICEDTEA
      </a>
      <a href="https://heapunderflow.org/" target="_blank" rel="noopener" class="magic-link">
        <span class="magic-link-icon"><i class="i-ri-stack-overflow-line"></i></span>HeapUnderFlow
      </a>
      <br />
      Challenge Creator
      <a href="https://ctftime.org/event/2818/" target="_blank" rel="noopener" class="magic-link">
        <span class="magic-link-icon"><i class="i-ri-flag-line"></i></span>NHNC CTF
      </a>
      <a href="https://thjcc.org" target="_blank" rel="noopener" class="magic-link">
        <span class="magic-link-icon"><i class="i-ri-flag-line"></i></span>THJCC CTF
      </a>
      <br />
      Hacking
      <a href="https://tryhackme.com/p/UmmIt" target="_blank" rel="noopener" class="magic-link">
        <span class="magic-link-icon"><i class="i-simple-icons-tryhackme"></i></span>TryHackMe
      </a>
      <a href="https://app.hackthebox.com/users/2099997" target="_blank" rel="noopener" class="magic-link">
        <span class="magic-link-icon"><i class="i-simple-icons-hackthebox"></i></span>HackTheBox
      </a>
      <br />
      Hunting
      <span class="magic-link no-hover">
        <span class="magic-link-icon"><i class="i-ri-bug-line"></i></span>Zero-Day
      </span>
    </p>

    <p class="flex gap-x-4 gap-y-2 flex-wrap">
      {
        siteConfig.socialLinks.map((link) => (
          <a aria-label={link.text} href={link.href} target="_blank" class="prose-link">
            <i class:list={[link.icon]} />
            {link.text}
          </a>
        ))
      }
    </p>

    <div class="flex flex-col sm:flex-row gap-2 sm:gap-6 mt-4 text-sm opacity-80">
      <a class="prose-link flex items-center gap-1" href={`mailto:${siteConfig.email}`}>
        <i class="i-ri-mail-line"></i>
        {siteConfig.email}
        <span class="opacity-70">(casual)</span>
      </a>
      <a class="prose-link flex items-center gap-1" href={`mailto:${siteConfig.email_two}`}>
        <i class="i-ri-briefcase-line"></i>
        {siteConfig.email_two}
        <span class="opacity-70">(job)</span>
      </a>
    </div>

    <hr class="hr-line" />

    <!-- Timeline Details -->
    <section class="mt-8">
      <h2 class="text-xl font-semibold mb-6">Timeline</h2>
      <div class="relative border-l-2 border-neutral-300 dark:border-neutral-700 pl-6 space-y-8">
        <div class="relative">
          <div
            class="absolute -left-8 top-0 w-4 h-4 rounded-full bg-neutral-600 dark:bg-neutral-400 flex items-center justify-center"
          >
            <i class="i-ri-flag-line text-white dark:text-black text-xs"></i>
          </div>
          <h3 class="font-medium">
            ICEDTEA CTF (Taiwanese based)
            <a
              href="https://ic3dt3a.org/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit ICEDTEA CTF website"
              class="ml-2 opacity-70 hover:opacity-100 transition-opacity"
            >
              <i class="i-ri-external-link-line text-sm"></i>
            </a>
          </h3>
          <p class="text-sm opacity-70">2024 - Present</p>
          <p class="text-sm mt-2 opacity-80">CTF team member, play with awesome teammates!</p>
        </div>

        <div class="relative">
          <div
            class="absolute -left-8 top-0 w-4 h-4 rounded-full bg-neutral-600 dark:bg-neutral-400 flex items-center justify-center"
          >
            <i class="i-ri-flag-line text-white dark:text-black text-xs"></i>
          </div>
          <h3 class="font-medium">
            HeapUnderFlow CTF (Hong Kong based)
            <a
              href="https://heapunderflow.org/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit HeapUnderFlow CTF website"
              class="ml-2 opacity-70 hover:opacity-100 transition-opacity"
            >
              <i class="i-ri-external-link-line text-sm"></i>
            </a>
          </h3>
          <p class="text-sm opacity-70">2025 - Present</p>
          <p class="text-sm mt-2 opacity-80">CTF team member, play with awesome teammates!</p>
        </div>

        <div class="relative">
          <div
            class="absolute -left-8 top-0 w-4 h-4 rounded-full bg-neutral-600 dark:bg-neutral-400 flex items-center justify-center"
          >
            <i class="i-ri-edit-line text-white dark:text-black text-xs"></i>
          </div>
          <h3 class="font-medium">
            No Hack No CTF
            <a
              href="https://ctftime.org/event/2818/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit No Hack No CTF on CTFtime"
              class="ml-2 opacity-70 hover:opacity-100 transition-opacity"
            >
              <i class="i-ri-external-link-line text-sm"></i>
            </a>
          </h3>
          <p class="text-sm opacity-70">Challenge Creator & Web Designer</p>
          <p class="text-sm mt-2 opacity-80">gitgit & Crackme challenges creator, website designer.</p>
        </div>

        <div class="relative">
          <div
            class="absolute -left-8 top-0 w-4 h-4 rounded-full bg-neutral-600 dark:bg-neutral-400 flex items-center justify-center"
          >
            <i class="i-ri-terminal-box-line text-white dark:text-black text-xs"></i>
          </div>
          <h3 class="font-medium">
            TryHackMe Player (Currently Top 4%)
            <a
              href="https://tryhackme.com/p/UmmIt"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit TryHackMe profile"
              class="ml-2 opacity-70 hover:opacity-100 transition-opacity"
            >
              <i class="i-ri-external-link-line text-sm"></i>
            </a>
          </h3>
          <p class="text-sm opacity-70">Active Player</p>
          <p class="text-sm mt-2 opacity-80">Ranked in the top 4% of TryHackMe players. (Keep growing)</p>
        </div>

        <div class="relative">
          <div
            class="absolute -left-8 top-0 w-4 h-4 rounded-full bg-neutral-600 dark:bg-neutral-400 flex items-center justify-center"
          >
            <i class="i-ri-bug-line text-white dark:text-black text-xs"></i>
          </div>
          <h3 class="font-medium">Zero-Day Hunting</h3>
          <p class="text-sm opacity-70">Randomly hunting zero-day vulnerabilities</p>
          <p class="text-sm mt-2 opacity-80">I do it for fun and learning purposes, no public disclosures yet.</p>
        </div>
      </div>
    </section>

    <hr class="hr-line" />

    <!-- Stacks Section -->
    <section class="mt-8">
      <h2 class="text-sm font-medium mb-4 flex items-center gap-2 opacity-80">
        <i class="i-ri-flashlight-line"></i>
        Stacks
      </h2>

      <div class="stack-desc bg-neutral-100 dark:bg-neutral-800 rounded-lg px-4 py-3 mb-4 flex flex-col gap-1">
        <span class="font-semibold text-base text-main flex items-center gap-2">
          The Stacks for my development, hacking, and daily use.
        </span>
        <small class="text-xs text-main/60 italic mt-1"> Cannot list all here, just the main ones :) </small>
      </div>

      <!-- Row 1 -->
      <div class="marquee-container">
        <div class="marquee-track animate-marquee">
          <div class="marquee-content">
            <i class="i-simple-icons-javascript text-4xl opacity-60" title="JavaScript"></i>
            <i class="i-simple-icons-typescript text-4xl opacity-60" title="TypeScript"></i>
            <i class="i-simple-icons-python text-4xl opacity-60" title="Python"></i>
            <i class="i-simple-icons-gnubash text-4xl opacity-60" title="Bash"></i>
            <i class="i-simple-icons-linux text-4xl opacity-60" title="Linux"></i>
            <i class="i-simple-icons-archlinux text-4xl opacity-60" title="Arch Linux"></i>
            <i class="i-simple-icons-nixos text-4xl opacity-60" title="NixOS"></i>
            <i class="i-simple-icons-debian text-4xl opacity-60" title="Debian"></i>
            <i class="i-simple-icons-raspberrypi text-4xl opacity-60" title="Raspberry Pi"></i>
            <i class="i-simple-icons-neovim text-4xl opacity-60" title="Neovim"></i>
            <i class="i-simple-icons-git text-4xl opacity-60" title="Git"></i>
          </div>
          <div class="marquee-content" aria-hidden="true">
            <i class="i-simple-icons-javascript text-4xl opacity-60"></i>
            <i class="i-simple-icons-typescript text-4xl opacity-60"></i>
            <i class="i-simple-icons-python text-4xl opacity-60"></i>
            <i class="i-simple-icons-gnubash text-4xl opacity-60"></i>
            <i class="i-simple-icons-linux text-4xl opacity-60"></i>
            <i class="i-simple-icons-archlinux text-4xl opacity-60"></i>
            <i class="i-simple-icons-nixos text-4xl opacity-60"></i>
            <i class="i-simple-icons-debian text-4xl opacity-60"></i>
            <i class="i-simple-icons-raspberrypi text-4xl opacity-60"></i>
            <i class="i-simple-icons-neovim text-4xl opacity-60"></i>
            <i class="i-simple-icons-git text-4xl opacity-60"></i>
          </div>
        </div>
      </div>

      <!-- Row 2 -->
      <div class="marquee-container mt-4">
        <div class="marquee-track animate-marquee-reverse">
          <div class="marquee-content">
            <i class="i-simple-icons-docker text-4xl opacity-60" title="Docker"></i>
            <i class="i-simple-icons-nginx text-4xl opacity-60" title="Nginx"></i>
            <i class="i-simple-icons-cloudflare text-4xl opacity-60" title="Cloudflare"></i>
            <i class="i-simple-icons-wireguard text-4xl opacity-60" title="WireGuard"></i>
            <i class="i-simple-icons-burpsuite text-4xl opacity-60" title="Burp Suite"></i>
            <i class="i-simple-icons-wireshark text-4xl opacity-60" title="Wireshark"></i>
            <i class="i-simple-icons-kalilinux text-4xl opacity-60" title="Kali Linux"></i>
            <i class="i-simple-icons-metasploit text-4xl opacity-60" title="Metasploit"></i>
            <i class="i-simple-icons-html5 text-4xl opacity-60" title="HTML5"></i>
            <i class="i-simple-icons-css3 text-4xl opacity-60" title="CSS3"></i>
          </div>
          <div class="marquee-content" aria-hidden="true">
            <i class="i-simple-icons-docker text-4xl opacity-60"></i>
            <i class="i-simple-icons-nginx text-4xl opacity-60"></i>
            <i class="i-simple-icons-cloudflare text-4xl opacity-60"></i>
            <i class="i-simple-icons-wireguard text-4xl opacity-60"></i>
            <i class="i-simple-icons-burpsuite text-4xl opacity-60"></i>
            <i class="i-simple-icons-wireshark text-4xl opacity-60"></i>
            <i class="i-simple-icons-kalilinux text-4xl opacity-60"></i>
            <i class="i-simple-icons-metasploit text-4xl opacity-60"></i>
            <i class="i-simple-icons-html5 text-4xl opacity-60"></i>
            <i class="i-simple-icons-css3 text-4xl opacity-60"></i>
          </div>
        </div>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  .marquee-container {
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
  }

  .marquee-track {
    display: flex;
    width: max-content;
  }

  .marquee-content {
    display: flex;
    gap: 3rem;
    padding-right: 3rem;
    flex-shrink: 0;
  }

  .animate-marquee {
    animation: marquee 40s linear infinite;
  }

  .animate-marquee-reverse {
    animation: marquee-reverse 40s linear infinite;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes marquee-reverse {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  .marquee-container:hover .marquee-track {
    animation-play-state: paused;
  }

  .magic-link-icon :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.125rem;
  }

  .magic-link-icon i {
    font-size: 1em;
    opacity: 0.8;
  }

  .magic-link.no-hover {
    cursor: default;
  }

  .magic-link.no-hover:hover {
    background: rgba(136, 136, 136, 0.15);
  }
</style>
