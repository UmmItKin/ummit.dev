---

<BaseLayout title="Friends" description="My friends and their awesome websites.">
  <div class="mb-8">
    <h1 class="text-3xl font-bold opacity-80">Friends</h1>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10">
    {
      friendsList.map((friend) => (
        <div class="flex flex-col items-center">
          <a href={friend.url} target="_blank" rel="noopener noreferrer" class="block">
            <img
              src={friend.image}
              alt={`${friend.name}'s avatar`}
              class="w-28 h-28 rd-full object-cover opacity-80 hover:opacity-100 transition-opacity duration-200"
            />
          </a>
          <span class="mt-4 text-base font-medium opacity-75">{friend.name}</span>
          <div class="mt-2 flex gap-2">
            <a
              href={friend.github}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`${friend.name}'s GitHub`}
              class="opacity-40 hover:opacity-100 transition-opacity"
            >
              <i class="i-simple-icons-github text-sm" />
            </a>
            <a
              href={friend.url}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`${friend.name}'s Website`}
              class="opacity-40 hover:opacity-100 transition-opacity"
            >
              <i class="i-ri-global-line text-sm" />
            </a>
          </div>
        </div>
      ))
    }
  </div>
</BaseLayout>
