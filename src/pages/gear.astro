const sections = Object.values(gear)
---

<BaseLayout title="Gear" description="My hardware and software setup." image={ogImage}>
  <div class="mb-8">
    <h1 class="text-3xl font-bold opacity-80">Gear</h1>
    <p class="mt-2 opacity-50">My daily hardware and software setup.</p>
  </div>

  <div class="space-y-12">
    {
      sections.map((section) => (
        <section>
          <h2 class="text-xl font-semibold mb-1 flex items-center gap-2">
            <i class:list={[section.icon, 'opacity-60']} />
            {section.title}
          </h2>
          {'subtitle' in section && section.subtitle && <p class="text-sm opacity-50 mb-4">{section.subtitle}</p>}
          {!('subtitle' in section) && <div class="mb-4" />}
          <div class="grid gap-2">
            {section.items.map((item) => (
              <div class="flex flex-col sm:flex-row sm:items-center py-2 border-b border-neutral-200 dark:border-neutral-800">
                <span class="text-sm opacity-50 sm:w-40 shrink-0">{item.label}</span>
                <span class="text-sm">{item.value}</span>
              </div>
            ))}
          </div>
        </section>
      ))
    }
  </div>
</BaseLayout>
